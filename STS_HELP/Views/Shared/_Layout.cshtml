<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STS_HELP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STS_HELP.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.css" rel="stylesheet" integrity="sha384-pmGS6IIcXhAVIhcnh9X/mxffzZNHbuxboycGuQQoP3pAbb0SwlSUUHn2v22bOenI" crossorigin="anonymous">

</head>
<body>
   
        <div class="">
            <div class="row">
            <div class="col-sm-auto bg-body-secondary sticky-top">
                <div class="d-flex flex-sm-column flex-row flex-nowrap align-items-center sticky-top">
                       @await Component.InvokeAsync("Menu")
                    </div>
                </div>

                <div class="col-sm p-3 min-vh-100">
                    <div class="m-3">
                        <main role="main" class="pb-3">
                            <div class="col-sm min-vh-100">
                                @RenderBody()
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>

    


   


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - STS_HELP
            @* <a asp-area="" asp-controller="Home" asp-action="index">Inicio</a>
            <a asp-area="" asp-controller="Chamados" asp-action="Privacy">Chamados</a> *@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
   <script src="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.js" integrity="sha384-X2pTSfom8FUa+vGQ+DgTCSyBZYkC1RliOduHa0X96D060s7Q//fnOh3LcazRNHyo" crossorigin="anonymous"></script>
</body>
</html>
