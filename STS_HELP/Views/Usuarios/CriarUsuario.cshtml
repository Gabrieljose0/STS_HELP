@model UsuariosModel

@{
    ViewData["Title"] = "CRIAR USUARIO";
}

<div>
    <h1 class="">Criar Usuario</h1>

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="container mt-5 me-5">
        <div class="">

            <form class="form-horizontal" role="form" asp-controller="Usuarios" asp-action="CriarUsuario" method="post">
                <!-- <h2> Editar Usuario</h2> -->
                <div class="form-group">
                    <label for="nome" class="col-sm-3 control-label">NOME</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Nome" placeholder="Nome" class="form-control" autofocus>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="email" class="col-sm-3 control-label">EMAIL </label>
                    <div class="col-sm-9">
                        <input type="email" asp-for="Email" placeholder="Email" class="form-control" name="email">
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="TipoUsuario" class="col-sm-3 control-label">TIPO DE USUÁRIO</label>
                    <div class="col-sm-9">
                        <select class="form-select" asp-for="TipoUsuario" aria-label="Default select example">
                            <option selected>Selecione</option>
                            <option value="Gestor">Gestor</option>
                            <option value="Tecnico">Técnico</option>
                            <option value="Colaborador">Colaborador</option>
                        </select>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="senha" class="col-sm-3 control-label">SENHA</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" asp-for="SenhaParaCadastro" placeholder="Senha" required>
                        <span asp-validation-for="SenhaParaCadastro" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-4 col-sm-9">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Salvar</button>
                </div>
                <div class="text-center mt-2 col-sm-9">
                    <a class="btn btn-danger" asp-controller="Usuarios" asp-action="index"> Cancelar </a>
                </div>

            </form> <!-- /form -->
        </div> <!-- ./container -->

    </div>
</div>

